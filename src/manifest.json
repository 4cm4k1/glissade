{
  "name": "Glissade",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Simple, opinionated scrollbar for Chrome",
  "homepage_url": "https://github.com/4cm4k1/glissade",
  "minimum_chrome_version": "62",
  "icons": {
    "16": "webp/icon-16.png",
    "128": "webp/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/chromereload.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "scss/content.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
