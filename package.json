    "remark-lint": "^6.0.1",
    "remark-preset-github": "^0.0.7",
    "sort-package-json": "^1.7.1",
    "uglifyjs-webpack-plugin": "^1.0.0",
    "webpack": "^3.8.1",
    "xo": "^0.18.2"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "xo": {
    "space": true,
    "envs": [
